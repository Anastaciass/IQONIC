@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="hero-flex hero-section">
    <div class="hero-text">
        <p class="tagline">LET THE GAMES BEGIN</p>
        <h1 class="main-title">LEVEL UP<br>YOUR BRAIN</h1>
        <p class="subtitle">Solve fun math challenges. Beat your high score. Compete with friends or chill solo.Smart is the new cool.</p>
        <a href="/Games" class="play-now-btn">PLAY NOW</a>
    </div>
    <div class="hero-image">
        <!-- Пока можно просто заглушку -->
        <!-- <img src="~/images/brain.png" alt="Brain Image" /> -->
    </div>
</section>
<section class="trial-section">
    <div class="trial-wrapper">
        <div class="trial-container">
            <!-- left card -->
            <div class="left-card">
                <div class="trial-card">
                    <div class="trial-header">
                        <div class="trial-title-block">
                            <h2 class="trial-title">7 Days<br>Trial</h2>
                        </div>
                        <img src="~/images/two_clouds.png" alt="Two_clouds" class="trial-clouds" />
                    </div>

                    <div class="trial-content">
                        <p class="trial-text">
                            Math games that actually don’t suck. No pressure, just play & learn at your own pace.
                        </p>
                        <a href="/Games" class="trial-play-btn">PLAY</a>
                    </div>
                </div>
            </div>

            <!-- right card -->
            <div class="right-card">
                <div class="feature-card">
                    <div class="feature-item">
                        <div class="feature-icon-wrapper">
                            <img src="~/images/icon-cap.png" alt="Graduation Cap" class="feature-icon" />
                        </div>
                        <div class="feature-text">
                            <p class="feature-title">Learn Fast, Win Faster</p>
                            <p class="feature-desc">YES, IT’S MATH. BUT COOLER.</p>
                        </div>
                    </div>

                    <div class="feature-item">
                        <div class="feature-icon-wrapper">
                            <img src="~/images/icon-devices.png" alt="Devices" class="feature-icon" />
                        </div>
                        <div class="feature-text">
                            <p class="feature-title">Works on Any Device</p>
                            <p class="feature-desc">NO NEED FOR BIG SCREENS — JUST BIG BRAINS</p>
                        </div>
                    </div>

                    <div class="feature-item">
                        <div class="feature-icon-wrapper">
                            <img src="~/images/icon-clock.png" alt="Clock" class="feature-icon" />
                        </div>
                        <div class="feature-text">
                            <p class="feature-title">Play Anytime, Anywhere</p>
                            <p class="feature-desc">WAITING FOR THE BUS? CHALLENGE YOURSELF</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="service-section">
    <div class="service-wrapper">
        <div class="service-header">
            <p class="service-subtitle">LEVEL UP YOUR BRAIN</p>
            <h2 class="service-title">MEET OUR APP’S SERVICE</h2>
        </div>
        <div class="service-cards">
            <div class="service-card">
                <img src="~/images/icon-controller.png" alt="Controller" class="service-icon controller-img" />
                <p class="card-title">Play Because You Want To</p>
                <p class="card-text">Not because you have to.</p>
            </div>
            <div class="service-card">
                <img src="~/images/icon-rocket.png" alt="Rocket" class="service-icon rocket-img" />
                <p class="card-title">Solve Under Pressure</p>
                <p class="card-text">Fast thinkers get top scores.</p>
            </div>
            <div class="service-card">
                <img src="~/images/icon-fairy.png" alt="Fairy" class="service-icon fairy-img" />
                <p class="card-title">Beat Levels,<br /> Earn Bragging Rights</p>
                <p class="card-text">Math has never been this fun.</p>
            </div>
        </div>
    </div>
</section>
<section class="how-it-works-section">
    <div class="how-top-text">
        <p class="how-tagline">LET THE GAMES BEGIN</p>
        <h2 class="how-title">HOW IT WORKS?</h2>
    </div>
    <img src="~/images/two_clouds.png" alt="Cloud" class="how-clouds" />
    <div class="how-wrapper">
        <div class="purple-bg-box">
            <div class="how-left">
                <div class="how-buttons">
                    <button>Foundations</button>
                    <button>Challenges</button>
                    <button>Characters</button>
                    <button>Power Skills</button>
                </div>
            </div>
            <div class="how-card">
                <h3 class="how-card-title">LEVEL UP YOUR <br /> BRAIN</h3>
                <p class="how-card-text">
                    Every click gets you smarter — and faster.<br>
                    Even if you hate math, this just hits different.<br>
                    These games are made to flex your logic, boost memory, and spark your next big idea.
                </p>
                <a class="learn-more-btn" href="#">Learn more →</a>
            </div>
        </div>
    </div>
</section>




